#:kivy 1.0.9

<Clapboard>:
	#Background
	canvas.before:
		Color:
			rgba: 1, 1, 1, 1 #white
		Rectangle:
			size: self.size
			pos: self.pos
	
	#This makes these things accessible from the Python object as, e.g., self.dateLabel rather than the more cumbersome self.ids["dateLabel"]
	dateLabel: dateLabel
	titleInput: titleInput
	clapButton: clapButton
	sceneInput: sceneInput
	shotInput: shotInput
	takeInput: takeInput
	
	BoxLayout:
		orientation: 'vertical'
		size: root.size
		Button:
			text: "Clap!"
			size_hint: (1, .25)
			font_size: 70
			id: clapButton
		TextInput:
			text: 'Movie Title'
			id: titleInput
			size_hint: (1, .25)
			multiline: False
			font_size: 70
		BoxLayout:
			orientation: "horizontal"
			size_hint: (1, .25)
			BoxLayout:
				orientation: "vertical"
				size_hint: (.3, 1)
				Label:
					text: "Scene #:"
					color: 0,0,0,1
					size_hint: (1, .2)
				TextInput:
					text: "1"
					multiline: False
					font_size: 70
					id: sceneInput
			BoxLayout:
				orientation: "vertical"
				size_hint: (.3, 1)
				Label:
					text: "Shot #:"
					color: 0,0,0,1
					size_hint: (1, .2)
				TextInput:
					text: "1"
					multiline: False
					font_size: 70
					id: shotInput
			BoxLayout:
				orientation: "vertical"
				size_hint: (.3, 1)
				Label:
					text: "Take #:"
					color: 0,0,0,1
					size_hint: (1, .2)
				TextInput:
					text: "1"
					multiline: False
					font_size: 70
					id: takeInput
		Label:
			text: "Date"
			id: dateLabel
			size_hint: (1, .25)
			color: 0,0,0,1
			font_size: 70
			halign: "center"
			valign: "middle"
